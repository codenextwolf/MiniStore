<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:layout_gravity="center_horizontal"
        android:text="Wambamkazamazon"/>

    <ImageView
        android:layout_width="264dp"
        android:layout_height="48dp"
        android:src="@drawable/arrow"
        android:layout_marginLeft="36dp"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:background="#B3E5FC">

    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:text="Featured Product"/>

    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:text="Ocean Views ($150)"/>

     <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:text="Drip or Drown."/>


    <ImageView
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/j1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="8dp">

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_margin="8dp"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:text="+"
            android:background="#B3E5FC"
            android:onClick="increase"/>

        <TextView
            android:id="@+id/quantity_text_view"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="36dp"
            android:layout_gravity="center_vertical"
            android:text="0"/>

        <Button
            android:layout_margin="8dp"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:text="-"
            android:background="#B3E5FC"
            android:onClick="decrease"/>

    </LinearLayout>

    <CheckBox
        android:id="@+id/cleaning_kit_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cleaning kit ($10)"
        android:buttonTint="#0288D1"
        android:onClick="displayPrice"/>

    <CheckBox
        android:id="@+id/shoe_strings_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="White shoe strings ($4)"
        android:buttonTint="#0288D1"
        android:onClick="displayPrice"/>

    <CheckBox
        android:id="@+id/name_embroidery_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name embroidery ($50)"
        android:buttonTint="#0288D1"
        android:onClick="displayPrice"/>


    <Button
        android:id="@+id/order_button"
        android:layout_gravity="center_horizontal"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Order ($0)"
        android:background="#B3E5FC"
        android:onClick="submitOrder"/>

    </LinearLayout>


</LinearLayout>